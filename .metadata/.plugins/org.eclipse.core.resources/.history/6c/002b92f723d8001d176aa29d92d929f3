package com.javalec.base;

import java.util.Scanner;

public class Test {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int inp = 0;
		String message = "";
		String inpS = "입력하신 숫자 ";

		System.out.print("숫자를 입력하세요 : ");
		inp = scanner.nextInt();

		if (inp % 2 == 0) {
			message = "짝수";
		}else {
			message = "홀수";
		}
		System.out.println(inpS + inp + "(은)" + message + "입니다.");

	}

}
